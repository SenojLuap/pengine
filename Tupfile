: foreach ./src/*.cpp |> g++ -g -std=c++11 -I/usr/include/python2.7 `sdl2-config --cflags` -Iinclude -fPIC -o %o -c %f |> ./build/%B.o
: ./build/*.o |> g++ -shared -Wl,--export-dynamic %f `sdl2-config --libs` -L/usr/lib/python2.7/config -lboost_python -lpython2.7 -lSDL2_image -o pengine.so |> pengine.so